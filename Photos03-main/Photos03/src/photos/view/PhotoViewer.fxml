<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos.view.PhotoViewerController">
    <top>
    <VBox spacing="10" style="-fx-padding: 10;">
        <Label fx:id="dateLabel" text="Date" />
        <HBox spacing="10" alignment="center">
            <Button text="Previous" fx:id="prevButton" onAction="#previousPhoto"/>
            <Button text="Next" fx:id="nextButton" onAction="#nextPhoto"/>
        </HBox>
        <Label text="Tags" />
        <ListView fx:id="tagsListView" prefHeight="100" />
    </VBox>
</top>

    <center>
        <ImageView fx:id="imageView" preserveRatio="true" fitHeight="500" fitWidth="600"/>
    </center>
</BorderPane>
